{
  "name": "clan-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 22.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "MODE=development vite build --mode development --configLoader native && MODE=development vite dev --configLoader native --strictPort",
    "build": "MODE=production vite build --configLoader native",
    "preview": "serve ./build",
    "prepare": "svelte-kit sync || echo ''",
    "prelint": "svelte-kit sync",
    "lint": "prettier --check . && eslint --flag unstable_native_nodejs_ts_config && svelte-check && stylelint '**/*.css' '**/*.svelte'"
  },
  "devDependencies": {
    "@clan/coding-standard-svelte": "^0.0.1",
    "@clan/vite-plugin-markdown": "^0.0.1",
    "@clan/vite-plugin-pagefind": "^0.0.1",
    "@fontsource-variable/geist": "^5.2.8",
    "@poppanator/sveltekit-svg": "^6.0.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^25.1.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "postcss-preset-env": "^11.1.1",
    "prettier": "^3.8.1",
    "serve": "^14.2.5",
    "stylelint": "^17.1.1",
    "svelte": "^5.49.2",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-value": "^0.0.1"
  },
  "dependencies": {
    "modern-normalize": "^3.0.1"
  }
}
