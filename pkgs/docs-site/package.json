{
  "name": "clan-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/vite-plugin-clanmd"
  ],
  "scripts": {
    "dev": "vite dev --configLoader native",
    "build": "vite build --configLoader native && pagefind --site build",
    "preview": "vite preview --configLoader native",
    "prepare": "svelte-kit sync || echo ''",
    "lint": "svelte-kit sync && prettier --check . && eslint --flag unstable_native_nodejs_ts_config --no-inline-config && oxlint --type-aware && svelte-check"
  },
  "devDependencies": {
    "@fontsource-variable/geist": "^5.2.8",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^25.1.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^5.4.0",
    "eslint-plugin-svelte": "^3.14.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "pagefind": "^1.4.0",
    "postcss-preset-env": "^11.1.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.48.1",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-pagefind": "^1.0.7"
  }
